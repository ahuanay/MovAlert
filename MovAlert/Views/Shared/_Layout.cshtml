<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title | Mov Alert</title>

    <link href="~/Theme/CollAdmin/css/font-face.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" />

    <link href="~/Theme/CollAdmin/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Theme/CollAdmin/vendor/animsition/animsition.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/wow/animate.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/slick/slick.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Theme/CollAdmin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" />

    <link href="~/Theme/CollAdmin/css/theme.css" rel="stylesheet" />
</head>
<body class="animsition">

    <div class="page-wrapper">
        <aside class="menu-sidebar2">
            <div class="logo">
                <a href="#">
                    <img src="images/icon/logo-white.png" alt="MovAlert" />
                </a>
            </div>
            <div class="menu-sidebar2__content js-scrollbar1">
                <div class="account2">
                    <div class="image img-cir img-120">
                        <img src="@Url.Action("convertirImagen", "Avatar", new {IdEmpleado = Session["IdEmpleado"].ToString()})" alt="@Session["Avatar"].ToString()" />
                    </div>
                    <h4 class="name text-center">@Session["Nombre"].ToString()</h4>
                    <a href="@Url.Action("LogOut", "Login")">Cerrar Sesión</a>
                </div>
                <nav class="navbar-sidebar2">
                    <ul class="list-unstyled navbar__list">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i>
                                <span class="bot-line"></span>Inicio
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Monitoreos")">
                                <i class="fas fa-eye"></i>
                                <span class="bot-line"></span>Monitoreos
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Monitoreos_Incidencias")">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span class="bot-line"></span>Alertas
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-gear"></i>Administración
                                <span class="arrow">
                                    <i class="fas fa-angle-down"></i>
                                </span>
                            </a>
                            <ul class="list-unstyled navbar__sub-list js-sub-list">
                                <li>
                                    <a href="@Url.Action("Index", "Clientes")">Cliente</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Equipos")">Equipo</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Incidencias")">Incidencias</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Empleados")">Empleados</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="page-container2">
            @RenderBody()

            <section class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright &copy; @DateTime.Now.Year - MovAlert.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </div>

    <script src="~/Theme/CollAdmin/vendor/jquery-3.2.1.min.js"></script>

    <script src="~/Theme/CollAdmin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/bootstrap-4.1/bootstrap.min.js"></script>

    <script src="~/Theme/CollAdmin/vendor/slick/slick.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/wow/wow.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/animsition/animsition.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Theme/CollAdmin/vendor/select2/select2.min.js"></script>

    <script src="~/Theme/CollAdmin/js/main.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>